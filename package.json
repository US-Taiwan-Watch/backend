    "type-graphql": "^1.1.1",
    "typescript": "^4.6.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "eslint-config-next": "^12.1.0",
    "eslint-plugin-unicorn": "^41.0.0",
    "rimraf": "^3.0.2"
  }
