  "scripts": {
    "ts-node": "node node_modules/ts-node/dist/bin.js",
    "start": "node dist/src/app.js",
    "dev": "npm run graphql-dev",
    "build": "npm run clean & node node_modules/typescript/bin/tsc",
    "clean": "rimraf dist",
